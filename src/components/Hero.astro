---
import Button from "./common/Button.astro";

const {
	subtitle = "weboldal fejlesztés",
	title = "Legyen egy weboldalad, ami profi megjelenést ad, bizalmat épít, és eredményeket szállít.",
	description =
		"10+ év rutinnal építünk egyedi, gyors weboldalakat. Rendszereink nemcsak látványosak, de vevőket szereznek és veled együtt fejlődnek.",
	ctaLabel = "Egyeztessünk időpontot",
	ctaHref = "/contact",
	reviewsLabel = "90+ elégedett ügyfél",
} = Astro.props;
---

<div class="container mx-auto px-5 min-h-162.5 flex items-center">
	<div class="max-w-150 mx-auto text-center text-light">
		<h2 class="uppercase font-medium tracking-wider text-primary mb-4">{subtitle}</h2>
		<h1 class="font-bold text-4xl leading-tight mb-4">{title}</h1>
		<p>{description}</p>
		<div class="flex justify-center items-center mt-6 gap-5">
			<Button link={ctaHref}>{ctaLabel}</Button>
			<div class="grid text-left text-secondary text-xs">
				<span class="flex gap-1">
					<i class="bi bi-star-fill"></i>
					<i class="bi bi-star-fill"></i>
					<i class="bi bi-star-fill"></i>
					<i class="bi bi-star-fill"></i>
					<i class="bi bi-star-fill"></i>
				</span>
				<span>{reviewsLabel}</span>
			</div>
		</div>
	</div>
</div>
